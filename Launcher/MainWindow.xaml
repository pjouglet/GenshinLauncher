<Window
    x:Class="Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:vm="clr-namespace:Launcher.ViewModel"
    xmlns:resources="clr-namespace:Launcher.Resources"
    Title="GILauncher"
    MinWidth="1300"
    MinHeight="750"
    d:DataContext="{d:DesignInstance Type=vm:MainWindow}"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush x:Name="Background" />

    </Window.Background>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="#141414" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <TextBlock
                Margin="15,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="White">
                <Run Text="{x:Static resources:Resources.MAIN_WINDOW_GAME_NAME }" />
                <Run
                    FontWeight="Light"
                    Foreground="Gray"
                    Text="[" />
                <Run
                    FontWeight="Light"
                    Foreground="Gray"
                    Text="{Binding PatchStatueStr}" />
                <Run
                    FontWeight="Light"
                    Foreground="Gray"
                    Text="]" />
            </TextBlock>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Click="OpenSettings"
                    Content="&#xe713;"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="16"
                    Style="{DynamicResource WindowControlButton}" />

                <Button
                    Click="WindowMinize"
                    Content="&#xe73c;"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="20"
                    Style="{DynamicResource WindowControlButton}" />
                <Button
                    Click="CloseWindow"
                    Content="&#xe711;"
                    FontFamily="Segoe Fluent Icons"
                    FontSize="20"
                    Style="{DynamicResource WindowControlButton}" />
            </StackPanel>
        </Grid>

        <Canvas x:Name="canvas" Grid.Row="1">
            <Border
                Canvas.Left="60"
                Canvas.Top="200"
                BorderBrush="#60FFFFFF"
                BorderThickness="1">
                <pu:Carousel
                    Width="450"
                    Height="220"
                    Animation="Slide,Fade"
                    TextBlock.FontSize="40"
                    TextBlock.Foreground="White"
                    TextBlock.TextAlignment="Center">
                    <Border>
                        <Border.Background>
                            <ImageBrush ImageSource="Resources/1.jpg" />
                        </Border.Background>
                    </Border>
                    <Border>
                        <Border.Background>
                            <ImageBrush ImageSource="Resources/1.jpg" />
                        </Border.Background>
                    </Border>
                </pu:Carousel>

            </Border>

            <Grid
                Canvas.Left="60"
                Canvas.Bottom="110"
                Width="450"
                Height="160"
                Background="#80000000">
                <Border
                    Height="37"
                    VerticalAlignment="Top"
                    Background="#50000000" />

                <TabControl Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#ffd284" />
                        </Style>
                    </TabControl.Resources>
                    <TabItem
                        Header="{x:Static resources:Resources.MAIN_WINDOW_STATUS }"
                        Style="{DynamicResource TabItemStyle1}"
                        ToolTip="{x:Static resources:Resources.MAIN_WINDOW_STATUS_TOOLTIP }">
                        <StackPanel Margin="10" MouseLeftButtonDown="RefreshServerInfo">
                            <!--<TextBlock HorizontalAlignment="Center" Text="ServerInfo" />-->
                            <TextBlock LineHeight="32">
                                <Run Text="[Ping]:" />
                                <Run Text="{Binding ServerInfo.timeout}" />
                                <Run Text="ms" />
                                <LineBreak />
                                <Run Text="{x:Static resources:Resources.MAIN_WINDOW_ONLINE }" />
                                <Run Text="{Binding ServerInfo.players}" />
                                <LineBreak />

                                <Run Text="{x:Static resources:Resources.MAIN_WINDOW_VERSION }" />
                                <Run Text="{Binding ServerInfo.ver}" />
                            </TextBlock>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="{x:Static resources:Resources.MAIN_WINDOW_NOTICES }" Style="{DynamicResource TabItemStyle1}">
                        <ItemsControl ItemsSource="{Binding AnnounceMents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="10,5"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="GoToBroswer"
                                            Tag="{Binding url}"
                                            Text="{Binding content}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="10,5"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="GoToBroswer"
                                            Tag="{Binding url}"
                                            Text="{Binding time}" />


                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </TabItem>
                </TabControl>
            </Grid>

            <Border
                Canvas.Right="0"
                Height="{Binding ElementName=canvas, Path=ActualHeight}"
                Background="#50000000">
                <StackPanel Margin="20">
                    <Button
                        Width="44"
                        Height="44"
                        Margin="0,15"
                        Style="{DynamicResource IconButton}">
                        <svgc:SvgViewbox Width="22" Source="Resources\Icon\discord.svg" />
                    </Button>
                    <Button
                        Width="44"
                        Height="44"
                        Margin="0,15"
                        Style="{DynamicResource IconButton}">
                        <svgc:SvgViewbox Width="22" Source="Resources\Icon\QQ.svg" />
                    </Button>
                    <Button
                        Width="44"
                        Height="44"
                        Margin="0,15"
                        Style="{DynamicResource IconButton}">
                        <svgc:SvgViewbox Width="22" Source="Resources\Icon\github.svg" />
                    </Button>
                </StackPanel>
            </Border>

            <StackPanel
                Canvas.Right="120"
                Canvas.Bottom="40"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Width="200"
                    Height="64"
                    Background="#ffd325"
                    Command="{Binding StartGameCommand}"
                    Content="{Binding StartGameBtnText, FallbackValue={x:Static resources:Resources.LAUNCH}}"
                    Cursor="Hand"
                    FontSize="24"
                    Foreground="#704a1d"
                    Style="{DynamicResource StartGameButton}" />
                <ToggleButton
                    Name="tb"
                    Width="32"
                    Background="#ffd325"
                    BorderBrush="#cca81d"
                    BorderThickness="1,0,0,0"
                    Content="&#xe700;"
                    FontFamily="Segoe Fluent Icons"
                    FontWeight="Bold"
                    Style="{DynamicResource ToggleButtonStyle1}" />

                <Popup
                    AllowsTransparency="True"
                    HorizontalOffset="80"
                    IsOpen="{Binding ElementName=tb, Path=IsChecked}"
                    Placement="Top"
                    StaysOpen="False"
                    VerticalOffset="-8">
                    <Border
                        Padding="5"
                        Background="White"
                        CornerRadius="8">

                        <StackPanel>
                            <MenuItem
                                Click="Official_Sel"
                                FontWeight="Bold"
                                Header="{x:Static resources:Resources.SERVER_OFFICIAL}" />
                            <MenuItem
                                Click="Private_Sel"
                                FontWeight="Bold"
                                Header="{x:Static resources:Resources.SERVER_PRIVATE}" />
                        </StackPanel>
                    </Border>
                </Popup>
            </StackPanel>

        </Canvas>

        <Frame
            x:Name="dialog_frame"
            Grid.Row="1"
            d:IsHidden="True"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
